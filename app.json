{
  "name": "Lightning Design System",
  "buildpacks": [
    {
      "url": "https://github.com/aputinski/heroku-buildpack-npm-github"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    }
  ],
  "logo": "https://avatars1.githubusercontent.com/u/4857302?v=3&s=200",
  "env": {
    "APP_MODE": {
      "required": true,
      "value": "public",
      "description": "The application's mode: public (for the public website), preview (for staging builds), or sso-landing (for internal releases)."
    },
    "BUG_URL": {
      "required": true,
      "value": "https://github.com/salesforce-ux/design-system/issues"
    },
    "COOKIE_KEYS": {
      "required": true
    },
    "DEPLOY_REPO": {
      "required": true
    },
    "FEEDBACK_URL": {
      "required": true
    },
    "GITHUB_USER": {
      "required": true
    },
    "GITHUB_USER_ACCESS_TOKEN": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "INTERNAL_USERNAME": {
      "required": true
    },
    "INTERNAL_PASSWORD": {
      "required": true
    },
    "NPM_TOKEN": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    }
  }
}
